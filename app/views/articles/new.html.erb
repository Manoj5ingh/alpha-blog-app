<h1>Create an Article</h1>
<% if @article.errors.any? %>
<h2>Following errors prevented the article from getting created</h2>
<ul>
    <% @article.errors.messages.each { |msg| %>
    <li> <%= msg %> </li>
    <% } %>
</ul>
<% end %>
<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :desc %>
    <%= f.text_area :desc %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>